#!/usr/bin/env bash
export MARIADB_IMAGE=${MARIADB_IMAGE:="mariadb"}
export MARIADB_IMAGE_VERSION=${MARIADB_IMAGE_VERSION:="latest"}
export MARIADB_ROOT=${MARIADB_ROOT:="/var/lib/dokku/services/mariadb-sc"}

export PLUGIN_NAME="mariadb-sc"
export PLUGIN_COMMAND_PREFIX=$PLUGIN_NAME
export PLUGIN_DATA_ROOT=$MARIADB_ROOT
export PLUGIN_DATABASE_PORT=3306
export PLUGIN_DATABASE_ALIAS=$PLUGIN_NAME
export PLUGIN_IMAGE=$MARIADB_IMAGE
export PLUGIN_IMAGE_VERSION=$MARIADB_IMAGE_VERSION
export PLUGIN_SCHEME="mysql"
export PLUGIN_SERVICE="MariaDB"
